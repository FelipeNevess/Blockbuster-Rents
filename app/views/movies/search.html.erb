<main class="main-movies">
  <header class="header-search-movie">
    <h1>
      <%= @movies.empty? ? 'Nenhum resultado encontrado (╥_╥)' :
        pluralize(@movies.count, "resultado encontrado")
      %>
    </h1>
  </header>

  <div>
    <ul>
      <% @movies.each do |movie| %>
        <li>
          <div>
            <%= link_to media_movie_path(movie.id, movie.title) do %>
              <%= image_tag(movie.card_image) %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</main>
