<header class="leyout-header">
  <div class="nav">
    <div class="menu <% unless user_signed_in? %>desable-menu<% end %>">
      <button type="button">
        <%= image_tag('menu.svg',  alt: "menu") %>
      </button>
    </div>
    <div class="logo">
      <%= link_to root_path do %>
        <h1>LOGO</h1>
      <% end %>
    </div>
  </div>
  <div class="nav">
    <div class="search">
      <%= form_with url: search_movies_path, method: :get, local: true, class: 'search-form' do |f| %>
        <%= f.text_field :q, class: "input", required: true, placeholder: "Filmes, sÃ©ries, shows..." %>
      <% end %>
      <button type="button" class="btn-search">
        <%= image_tag('search.svg', alt: "search") %>
      </button>
    </div>
    <% if user_signed_in? %>
      <div class="user-avatar">
        <button type="button" class="button-nav-user">
          <%= image_tag(current_user.avatar_thumbnail, alt: "user", class: "user_avatar") %>
        </button>
      </div>
    <% else %>
      <nav class="login">
        <ul>
          <li>
            <%= link_to 'Login', user_session_path %>
          </li>
          <li>
            <%= link_to 'Cadastrar', new_user_registration_path %>
          </li>
        </ul>
      </nav>
    <% end %>
  </div>
</header>

<%= render 'users/nav_user' %>
<%= render 'movies/nav_options' %>
  